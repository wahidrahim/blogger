<h1>Login</h1>

<%= form_tag author_sessions_path, method: :post do %>
	<div class="field">
		<%= label_tag :email %>
		<%= text_field_tag :email %>
	</div>
	<br>
	<div class="field">
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</div>
	<br>
	<div class="actions">
		<%= submit_tag "Login" %>
	</div>
	<br>
<% end %>

<%= link_to 'Back', articles_path %>
